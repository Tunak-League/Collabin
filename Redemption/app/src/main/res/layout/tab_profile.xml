<!--<tunakleague.com.redemption.experimental.VerticalScrollview-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" tools:context="tunakleague.com.redemption.profiles.UserFragment"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Username"
            android:id="@+id/textView4"
            android:layout_below="@+id/profile_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" />

        <!--Username input field-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chat_username"
            android:layout_below="@id/textView4"
            android:layout_alignLeft="@id/textView4"
            android:layout_alignStart="@id/textView4"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email"
            android:id="@+id/email_label"
            android:layout_below="@id/chat_username"
            android:layout_alignLeft="@id/chat_username"
            android:layout_alignStart="@id/chat_username"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/chat_email"
            android:layout_below="@id/email_label"
            android:layout_alignLeft="@id/email_label"
            android:layout_alignStart="@id/email_label"
            android:layout_marginRight="30dp" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chat_skills"
            android:layout_below="@id/skill_label"
            android:layout_alignLeft="@id/skill_label"
            android:layout_alignStart="@id/skill_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="User Summary"
            android:id="@+id/summary_label"
            android:layout_below="@id/chat_skills"
            android:layout_alignLeft="@id/skill_label"
            android:layout_alignStart="@id/skill_label"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chat_user_summary"
            android:layout_below="@id/summary_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@id/summary_label"
            android:layout_alignLeft="@id/summary_label"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Location"
            android:id="@+id/location_label"
            android:layout_below="@id/chat_email"
            android:layout_alignLeft="@id/chat_email"
            android:layout_alignStart="@id/chat_email"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chat_location"
            android:layout_below="@+id/location_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@id/location_label"
            android:layout_alignLeft="@id/location_label"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Preferred Project Types"
            android:id="@+id/types_label"
            android:layout_below="@id/chat_user_summary"
            android:layout_alignLeft="@id/summary_label"
            android:layout_alignStart="@id/summary_label"
            android:layout_marginTop="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Skills"
            android:id="@+id/skill_label"
            android:layout_below="@id/chat_location"
            android:layout_alignLeft="@id/chat_location"
            android:layout_alignStart="@id/chat_location"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chat_types"
            android:layout_below="@id/types_label"
            android:layout_alignLeft="@id/chat_skills"
            android:layout_alignStart="@id/chat_skills" />

    </RelativeLayout>

</ScrollView>
