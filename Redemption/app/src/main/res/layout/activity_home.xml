<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tunakleague.com.redemption.HomeActivity">

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Find Projects"
    android:id="@+id/find_projects_button"
    android:layout_gravity="left|center_vertical"
    android:layout_marginTop="189dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Find Collaborators"
    android:id="@+id/find_collaborators_button"
    android:layout_gravity="right|center_vertical"
    android:layout_alignTop="@+id/find_projects_button"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"  />

</RelativeLayout>
